function gpt {
    $param = $args -join ' '  
    switch  ($param) {
        { $param -match '(emp|maha)' } { Start-Process "https://chat.openai.com/chat/924e36d4-640e-4ca5-bc83-b5a8afb90400" }
        { $param -match '(pws|powershell).arr' } {  Start-Process "https://chat.openai.com/chat/abb9188c-cbef-4070-b2b7-a7f2a4ff6bc6" }
        { $param -match '(pws|powershell).ref' } {  Start-Process "https://chat.openai.com/chat/a02d2d80-01ae-4397-bec9-cc2f51bb02a7" }
        Default { Start-Process "https://chat.openai.com/chat" }
    }
     
}
